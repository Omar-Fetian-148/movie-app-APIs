    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "graphql": "^16.8.1",
    "graphql-redis-subscriptions": "^2.6.1",
    "graphql-tag": "^2.12.6",
    "graphql-upload": "^16.0.2",
    "graphql-ws": "^5.16.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http": "^0.0.1-security",
